{
    "name": "x-tools/xtools",
    "description": "A suite of tools to analyze page, user and project data of MediaWiki website",
    "license": "GPL-3.0+",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.2"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-PDO": "*",
        "symfony/symfony": "3.4.*",
        "twig/twig": "^1.0",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "doctrine/common": "2.6.*",
        "doctrine/collections": "1.3.*",
        "doctrine/annotations": "1.2.*",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/monolog-bundle": "^3.1",
        "sensio/framework-extra-bundle": "^3.0",
        "incenteev/composer-parameter-handler": "^2.0",
        "Krinkle/intuition": "0.6.1",
        "addwiki/mediawiki-api": "^0.7",
        "mediawiki/oauthclient": "^0.1",
        "symfony/webpack-encore-pack": "^1.0",
        "symfony/cache": "^3.2",
        "snc/redis-bundle": "^2.0",
        "predis/predis": "^1.0",
        "nelmio/cors-bundle": "^1.5",
        "jms/serializer-bundle": "^1.4",
        "symfony/stopwatch": "^3.2",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "eightpoints/guzzle-bundle": "^6.1"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.0",
        "phpunit/phpunit": "^5.3",
        "symfony/phpunit-bridge": "^3.0",
        "squizlabs/php_codesniffer": "^2.0",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "mediawiki/minus-x": "0.3.0"
    },
    "scripts": {
        "node_scripts": [
            "npm install"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@node_scripts"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@node_scripts"
        ],
        "test": [
            "composer validate --ansi",
            "./vendor/bin/parallel-lint --exclude vendor .",
            "./vendor/bin/phpcs -s . --ignore=/home/scrutinizer/build/node_modules",
            "./vendor/bin/phpunit tests --coverage-clover=coverage.xml",
            "./vendor/bin/minus-x check ."
        ],
        "fix": [
            "./vendor/bin/phpcbf .",
            "./vendor/bin/minus-x fix ."
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
