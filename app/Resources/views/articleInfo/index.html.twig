{% extends 'base.html.twig' %}
{% import 'macros/forms.html.twig' as forms %}

{% block body %}
    <form class="col-lg-8 col-lg-offset-2" action="{{ path('ArticleInfo') }}" method="get" accept-charset="utf-8">
        <fieldset class="form-fieldset">
            {{ forms.wiki_input(project) }}
            {{ forms.page_input(true, project) }}
            {{ forms.date_input('start', false) }}
            {{ forms.date_input('end', false) }}
        </fieldset>
        {{ forms.submit_btn }}
    </form>
{% endblock %}
