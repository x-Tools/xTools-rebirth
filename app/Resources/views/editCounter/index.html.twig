{% extends 'base.html.twig' %}
{% import 'macros/forms.html.twig' as forms %}

{% block body %}
    <form class="col-lg-8 col-lg-offset-2" action="{{ path('EditCounter') }}" method="get" accept-charset="utf-8">
        <fieldset class="form-fieldset">
            {{ forms.wiki_input(project) }}
            {{ forms.user_input(true, false, project) }}
            <div class="input-group form-row">
                <label class="input-group-addon form-label">
                    {{ msg('show') }}
                    <div class="glyphicon glyphicon-info-sign tooltipcss pull-right" role="dialog" aria-labelledby="show-sections-desc">
                        <div class="tooltip-body" id="show-sections-desc">
                            {{ msg('show-sections-desc') }}
                        </div>
                    </div>
                </label>
                <div class="form-control stat-section-selector">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" class="stat-section-all"{% if isAllSections %} checked="checked"{% endif %}>
                            {{ msg('all') }}
                        </label>
                    </div>
                    {% for section in availableSections %}
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="sections[]" value="{{ section }}"{% if section in sections %} checked="checked"{% endif %}>
                                {{ msg(section) }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </fieldset>
        <fieldset class="form-fieldset">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="format" value="wikitext">
                    {{ msg('view-wikitext') }}
                </label>
            </div>
        </fieldset>
        {{ forms.submit_btn }}
    </form>
{% endblock %}
